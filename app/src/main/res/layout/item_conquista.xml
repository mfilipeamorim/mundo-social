<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:minHeight="80dp"
    android:background="#000000"
    android:layout_marginHorizontal="8dp"
    android:clipToPadding="false">

    <!-- Ícone da conquista -->
    <ImageView
        android:id="@+id/imgConquista"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerInside"
        android:padding="6dp" />

    <!-- Bloco de texto (título e descrição empilhados) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Título da conquista -->
        <TextView
            android:id="@+id/tvTituloConquista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da Conquista"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Descrição da conquista -->
        <TextView
            android:id="@+id/tvDescricaoConquista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição da conquista"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</LinearLayout>
